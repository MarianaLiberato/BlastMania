{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist", // Specify your output directory (change if needed)
      "rootDir": "./src", // Specify your source code directory (change if needed)
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES6", "DOM"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  